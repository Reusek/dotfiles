#!/bin/bash

session_name=$(tmux display-message -p "#S")
session_path=$(realpath $1)
clean_name=$(basename $session_path | tr -s " ./" "_" | tr -c "a-zA-Z-0-9_" "_")
target="$session_name:$clean_name"
# echo $(basename $1)
echo $clean_name

if ! tmux has-session -t $target 2> /dev/null; then
	tmux neww -dn $clean_name
fi

tmux send-key -t $target "cd $session_path && make_build" KPEnter

echo "builder"

